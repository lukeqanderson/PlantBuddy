<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePlant">

    <Button
        android:id="@+id/back_button"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:text="back"
        app:backgroundTint="#a7a7a7"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_name"
        app:layout_constraintVertical_bias="0.813" />

    <Button
        android:id="@+id/harvest_button"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:text="Harvest"
        app:backgroundTint="#FBBA0C"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_name"
        app:layout_constraintVertical_bias="0.559" />

    <Button
        android:id="@+id/fertilize_button"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:text="Fertilize"
        app:backgroundTint="#00C714"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toEndOf="@+id/water_button"
        app:layout_constraintTop_toBottomOf="@+id/plant_name"
        app:layout_constraintVertical_bias="0.181" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003">

        <TextView
            android:layout_width="203dp"
            android:layout_height="70dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:gravity="center_vertical|right"
            android:text="Plant Buddy!"
            android:textColor="#0BCA1E"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="2sp"
            android:layout_height="70sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            app:srcCompat="@drawable/leaf" />


    </LinearLayout>

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="196dp"
        android:layout_height="70dp"
        android:fontFamily="serif-monospace"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textColor="#ababab"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.108" />

    <Button
        android:id="@+id/water_button"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:text="Water"
        app:backgroundTint="#009FFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_name"
        app:layout_constraintVertical_bias="0.181" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="121dp"
        android:src="@drawable/plantborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_name"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>