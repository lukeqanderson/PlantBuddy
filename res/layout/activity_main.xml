<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:clickable="true"
        android:layout_weight="1"
        android:textAlignment="viewEnd"
        android:layout_marginEnd="10sp"
        android:textSize="16sp"
        android:textColor="#0BCA1E"
        android:text="Sign Out" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="203dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:gravity="center_vertical|right"
            android:text="Plant Buddy!"
            android:layout_marginTop="10sp"
            android:textColor="#0BCA1E"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="2sp"
            android:layout_height="70sp"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical|left"
            app:srcCompat="@drawable/leaf" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:text="My Plants:"
        android:textColor="#000000"
        android:textStyle="bold"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plantListComponent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/new_plant_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:textSize="20sp"
        android:layout_marginRight="20sp"
        android:backgroundTint="#0bca1e"
        android:layout_gravity="bottom"
        android:text="Add New Plant" />


</LinearLayout>