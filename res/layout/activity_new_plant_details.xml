<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="203dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:gravity="center_vertical|right"
            android:text="Plant Buddy!"
            android:layout_marginTop="10sp"
            android:textColor="#0BCA1E"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="2sp"
            android:layout_height="70sp"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical|left"
            app:srcCompat="@drawable/leaf" />


    </LinearLayout>

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="20sp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:text="Plant Details:"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/plant_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="18sp"
        android:text="Plant Name:" />

    <EditText
        android:id="@+id/plant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/days_per_watering_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="18sp"
        android:text="Days Per Watering:" />

    <EditText
        android:id="@+id/days_per_watering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/last_watering_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="18sp"
        android:text="Last Watering Date [YYYY-mm-dd]:" />

    <EditText
        android:id="@+id/last_watering_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/days_per_fertilizing_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="18sp"
        android:text="Days Per Fertilizing:" />

    <EditText
        android:id="@+id/days_per_fertilizing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/last_fertilizing_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="18sp"
        android:text="Last Fertilizing Date [YYYY-mm-dd]:" />

    <EditText
        android:id="@+id/last_fertilizing_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/harvest_date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="18sp"
        android:text="Harvest Date [YYYY-mm-dd] (optional):" />

    <EditText
        android:id="@+id/harvest_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cancel_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:textSize="20sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#FF3030"
            android:text="Cancel" />

        <Button
            android:id="@+id/add_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:textSize="20sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#0bca1e"
            android:text="Add" />

    </LinearLayout>



</LinearLayout>