<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:background="#f7f7f7"
        tools:layout_editor_absoluteX="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TextView
            android:id="@+id/plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Yolanda"
            android:textColor="#676B69"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/watering_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="- Needs Watering!"
            android:textColor="#0072FF"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/fertilizing_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="- Needs Fertilizing!"
            android:textColor="#0EB31E"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/harvest_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="- Ready to Harvest!"
            android:textColor="#E8B300"
            android:textSize="18sp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="1"
            app:backgroundTint="#006BE8"
            android:text="Update" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:text="Delete"
            app:backgroundTint="#EB191C" />
    </LinearLayout>


</LinearLayout>